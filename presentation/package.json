{
  "name": "presentation",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "electron:start": "electron . dev",
    "electron:build": "electron-builder",
    "parcel:start": "parcel --target=node --public-url ./ --bundle-node-modules src/slides.html",
    "parcel:build": "parcel build --target=node --public-url ./ --bundle-node-modules --no-source-maps src/slides.html",
    "start": "run-p -l parcel:start electron:start",
    "build": "npm run parcel:build && npm run electron:build",
    "present": "npm run parcel:build && electron ."
  },
  "build": {
    "files": [
      "assets",
      "main.js",
      "dev.env",
      "dist"
    ],
    "win": {
      "target": [
        "portable"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vue/component-compiler-utils": "^2.4.0",
    "electron": "^4.0.0",
    "electron-builder": "^20.38.4",
    "lit-html": "^0.14.0",
    "lit-html-element": "^0.9.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.11.0",
    "typescript": "^3.2.2",
    "vue": "^2.5.21",
    "vue-template-compiler": "^2.5.21"
  },
  "dependencies": {
    "electron-reload": "^1.4.0",
    "reveal.js": "^3.7.0"
  }
}
