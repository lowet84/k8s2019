{
  "name": "presentation",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "electron:start": "electron .",
    "electron:build": "electron-builder",
    "parcel:start": "parcel --target=node --public-url ./ --bundle-node-modules src/slides/slides.html",
    "parcel:start-setup": "parcel --target=node --public-url ./ --bundle-node-modules src/setup/setup.html",
    "parcel:build": "parcel build --target=node --public-url ./ --bundle-node-modules src/slides/slides.html",
    "parcel:build-setup": "parcel build --target=node --public-url ./ --bundle-node-modules src/setup/setup.html",
    "start": "run-p -l parcel:start parcel:start-setup electron:start",
    "build": "npm run parcel:build && npm run parcel:build-setup && npm run electron:build"
  },
  "build": {
    "files": [
      "dist",
      "assets",
      "node_modules",
      "main.js"
    ],
    "win": {
      "target": [
        "portable"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^4.0.0",
    "electron-builder": "^20.38.4",
    "lit-html": "^0.14.0",
    "lit-html-element": "^0.9.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.11.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "electron-reload": "^1.4.0",
    "reveal.js": "^3.7.0"
  }
}
